  <book id="3john" name="3John">
    <chapter num="1">
      <verse num="1">
        <text><p/><q who="The Elder">“The Elder, to the beloved Gaius, whom I love in truth.</q></text>
        <greek>
          <w lemma="ὁ">Ὁ</w>
          <w lemma="πρεσβύτερος">πρεσβύτερος</w>
          <w lemma="Γάϊος">Γαΐῳ</w>
          <w lemma="ὁ">τῷ</w>
          <w lemma="ἀγαπητός">ἀγαπητῷ,</w>
          <w lemma="ὅς">ὃν</w>
          <w lemma="ἐγώ">ἐγὼ</w>
          <w lemma="ἀγαπάω">ἀγαπῶ</w>
          <w lemma="ἐν">ἐν</w>
          <w lemma="ἀλήθεια">ἀληθείᾳ.</w>
        </greek>
      </verse>
      <verse num="2">
        <text><p/><q who="The Elder">Beloved, I pray that in every way you fare well and stay healthy, just as your inner life is faring well.</q></text>
        <greek>
          <w lemma="ἀγαπητός">Ἀγαπητέ,</w>
          <w lemma="περί">περὶ</w>
          <w lemma="πᾶς">πάντων</w>
          <w lemma="εὔχομαι">εὔχομαί</w>
          <w lemma="σύ">σε</w>
          <w lemma="εὐοδόομαι">εὐοδοῦσθαι</w>
          <w lemma="καί">καὶ</w>
          <w lemma="ὑγιαίνω">ὑγιαίνειν,</w>
          <w lemma="καθώς">καθὼς</w>
          <w lemma="εὐοδόομαι">εὐοδοῦταί</w>
          <w lemma="σύ">σου</w>
          <w lemma="ὁ">ἡ</w>
          <w lemma="ψυχή">ψυχή.</w>
        </greek>
      </verse>
      <verse num="3">
        <text><q who="The Elder">For I rejoiced greatly when the brothers came and testified to your truth—to how you are walking in the truth.</q></text>
        <greek>
          <w lemma="χαίρω">ἐχάρην</w>
          <w lemma="γάρ">γὰρ</w>
          <w lemma="λίαν">λίαν</w>
          <w lemma="ἔρχομαι">ἐρχομένων</w>
          <w lemma="ἀδελφός">ἀδελφῶν</w>
          <w lemma="καί">καὶ</w>
          <w lemma="μαρτυρέω">μαρτυρούντων</w>
          <w lemma="σύ">σου</w>
          <w lemma="ὁ">τῇ</w>
          <w lemma="ἀλήθεια">ἀληθείᾳ,</w>
          <w lemma="καθώς">καθὼς</w>
          <w lemma="σύ">σὺ</w>
          <w lemma="ἐν">ἐν</w>
          <w lemma="ἀλήθεια">ἀληθείᾳ</w>
          <w lemma="περιπατέω">περιπατεῖς.</w>
        </greek>
      </verse>
      <verse num="4">
        <text><q who="The Elder">I have no greater joy than this: to hear that my children are walking in the truth.</q></text>
        <greek>
          <w lemma="μειζότερος">μειζοτέραν</w>
          <w lemma="οὗτος">τούτων</w>
          <w lemma="οὐ">οὐκ</w>
          <w lemma="ἔχω">ἔχω</w>
          <w lemma="χαρά">⸀χαράν,</w>
          <w lemma="ἵνα">ἵνα</w>
          <w lemma="ἀκούω">ἀκούω</w>
          <w lemma="ὁ">τὰ</w>
          <w lemma="ἐμός">ἐμὰ</w>
          <w lemma="τέκνον">τέκνα</w>
          <w lemma="ἐν">ἐν</w>
          <w lemma="ὁ">⸀τῇ</w>
          <w lemma="ἀλήθεια">ἀληθείᾳ</w>
          <w lemma="περιπατέω">περιπατοῦντα.</w>
        </greek>
      </verse>
      <verse num="5">
        <text><p/><q who="The Elder">Beloved, you are acting faithfully in whatever you do for the brothers, especially since they are strangers to you.</q></text>
        <greek>
          <w lemma="ἀγαπητός">Ἀγαπητέ,</w>
          <w lemma="πιστός">πιστὸν</w>
          <w lemma="ποιέω">ποιεῖς</w>
          <w lemma="ὅς">ὃ</w>
          <w lemma="ἐάν">ἐὰν</w>
          <w lemma="ἐργάζομαι">ἐργάσῃ</w>
          <w lemma="εἰς">εἰς</w>
          <w lemma="ὁ">τοὺς</w>
          <w lemma="ἀδελφός">ἀδελφοὺς</w>
          <w lemma="καί">καὶ</w>
          <w lemma="οὗτος">⸀τοῦτο</w>
          <w lemma="ξένος">ξένους,</w>
        </greek>
      </verse>
      <verse num="6">
        <text><q who="The Elder">They have testified to your love before the assembly. You will do well to send them forward on their journey in a manner worthy of God.</q></text>
        <greek>
          <w lemma="ὅς">οἳ</w>
          <w lemma="μαρτυρέω">ἐμαρτύρησάν</w>
          <w lemma="σύ">σου</w>
          <w lemma="ὁ">τῇ</w>
          <w lemma="ἀγάπη">ἀγάπῃ</w>
          <w lemma="ἐνώπιον">ἐνώπιον</w>
          <w lemma="ἐκκλησία">ἐκκλησίας,</w>
          <w lemma="ὅς">οὓς</w>
          <w lemma="καλῶς">καλῶς</w>
          <w lemma="ποιέω">ποιήσεις</w>
          <w lemma="προπέμπω">προπέμψας</w>
          <w lemma="ἀξίως">ἀξίως</w>
          <w lemma="ὁ">τοῦ</w>
          <w lemma="θεός">θεοῦ·</w>
        </greek>
      </verse>
      <verse num="7">
        <text><q who="The Elder">For they went out on behalf of the Name, accepting nothing from the outsiders.</q></text>
        <greek>
          <w lemma="ὑπέρ">ὑπὲρ</w>
          <w lemma="γάρ">γὰρ</w>
          <w lemma="ὁ">τοῦ</w>
          <w lemma="ὄνομα">ὀνόματος</w>
          <w lemma="ἐξέρχομαι">ἐξῆλθον</w>
          <w lemma="μηδείς">μηδὲν</w>
          <w lemma="λαμβάνω">λαμβάνοντες</w>
          <w lemma="ἀπό">ἀπὸ</w>
          <w lemma="ὁ">τῶν</w>
          <w lemma="ἐθνικός">⸀ἐθνικῶν.</w>
        </greek>
      </verse>
      <verse num="8">
        <text><q who="The Elder">Therefore, we are obligated to support such people, so that we may become co-workers for the truth.</q></text>
        <greek>
          <w lemma="ἐγώ">ἡμεῖς</w>
          <w lemma="οὖν">οὖν</w>
          <w lemma="ὀφείλω">ὀφείλομεν</w>
          <w lemma="ὑπολαμβάνω">⸀ὑπολαμβάνειν</w>
          <w lemma="ὁ">τοὺς</w>
          <w lemma="τοιοῦτος">τοιούτους,</w>
          <w lemma="ἵνα">ἵνα</w>
          <w lemma="συνεργός">συνεργοὶ</w>
          <w lemma="γίνομαι">γινώμεθα</w>
          <w lemma="ὁ">τῇ</w>
          <w lemma="ἀλήθεια">ἀληθείᾳ.</w>
        </greek>
      </verse>
      <verse num="9">
        <text><p/><q who="The Elder">I wrote something to the assembly, but Diotrephes, who loves to be first among them, does not accept our authority.</q></text>
        <greek>
          <w lemma="γράφω">Ἔγραψά</w>
          <w lemma="τις">⸀τι</w>
          <w lemma="ὁ">τῇ</w>
          <w lemma="ἐκκλησία">ἐκκλησίᾳ·</w>
          <w lemma="ἀλλά">ἀλλ’</w>
          <w lemma="ὁ">ὁ</w>
          <w lemma="φιλοπρωτεύω">φιλοπρωτεύων</w>
          <w lemma="αὐτός">αὐτῶν</w>
          <w lemma="Διοτρέφης">Διοτρέφης</w>
          <w lemma="οὐ">οὐκ</w>
          <w lemma="ἐπιδέχομαι">ἐπιδέχεται</w>
          <w lemma="ἐγώ">ἡμᾶς.</w>
        </greek>
      </verse>
      <verse num="10">
        <text><q who="The Elder">For this reason, if I come, I will bring up the works he is doing—spouting wicked nonsense against us. And not satisfied with that, he refuses to welcome the brothers himself, and even prevents those who want to do so, throwing them out of the assembly.</q></text>
        <greek>
          <w lemma="διά">διὰ</w>
          <w lemma="οὗτος">τοῦτο,</w>
          <w lemma="ἐάν">ἐὰν</w>
          <w lemma="ἔρχομαι">ἔλθω,</w>
          <w lemma="ὑπομιμνῄσκω">ὑπομνήσω</w>
          <w lemma="αὐτός">αὐτοῦ</w>
          <w lemma="ὁ">τὰ</w>
          <w lemma="ἔργον">ἔργα</w>
          <w lemma="ὅς">ἃ</w>
          <w lemma="ποιέω">ποιεῖ,</w>
          <w lemma="λόγος">λόγοις</w>
          <w lemma="πονηρός">πονηροῖς</w>
          <w lemma="φλυαρέω">φλυαρῶν</w>
          <w lemma="ἐγώ">ἡμᾶς,</w>
          <w lemma="καί">καὶ</w>
          <w lemma="μή">μὴ</w>
          <w lemma="ἀρκέω">ἀρκούμενος</w>
          <w lemma="ἐπί">ἐπὶ</w>
          <w lemma="οὗτος">τούτοις</w>
          <w lemma="οὔτε">οὔτε</w>
          <w lemma="αὐτός">αὐτὸς</w>
          <w lemma="ἐπιδέχομαι">ἐπιδέχεται</w>
          <w lemma="ὁ">τοὺς</w>
          <w lemma="ἀδελφός">ἀδελφοὺς</w>
          <w lemma="καί">καὶ</w>
          <w lemma="ὁ">τοὺς</w>
          <w lemma="βούλομαι">βουλομένους</w>
          <w lemma="κωλύω">κωλύει</w>
          <w lemma="καί">καὶ</w>
          <w lemma="ἐκ">ἐκ</w>
          <w lemma="ὁ">τῆς</w>
          <w lemma="ἐκκλησία">ἐκκλησίας</w>
          <w lemma="ἐκβάλλω">ἐκβάλλει.</w>
        </greek>
      </verse>
      <verse num="11">
        <text><p/><q who="The Elder">Beloved, do not imitate what is evil but what is good. The one who does good is from God; the one who does evil has not seen God.</q></text>
        <greek>
          <w lemma="ἀγαπητός">Ἀγαπητέ,</w>
          <w lemma="μή">μὴ</w>
          <w lemma="μιμέομαι">μιμοῦ</w>
          <w lemma="ὁ">τὸ</w>
          <w lemma="κακός">κακὸν</w>
          <w lemma="ἀλλά">ἀλλὰ</w>
          <w lemma="ὁ">τὸ</w>
          <w lemma="ἀγαθός">ἀγαθόν.</w>
          <w lemma="ὁ">ὁ</w>
          <w lemma="ἀγαθοποιέω">ἀγαθοποιῶν</w>
          <w lemma="ἐκ">ἐκ</w>
          <w lemma="ὁ">τοῦ</w>
          <w lemma="θεός">θεοῦ</w>
          <w lemma="εἰμί">ἐστιν·</w>
          <w lemma="ὁ">ὁ</w>
          <w lemma="κακοποιέω">κακοποιῶν</w>
          <w lemma="οὐ">οὐχ</w>
          <w lemma="ὁράω">ἑώρακεν</w>
          <w lemma="ὁ">τὸν</w>
          <w lemma="θεός">θεόν.</w>
        </greek>
      </verse>
      <verse num="12">
        <text><q who="The Elder">Demetrius has been well-spoken of by everyone and by the truth itself. We also testify for him, and you know that our testimony is true.</q></text>
        <greek>
          <w lemma="Δημήτριος">Δημητρίῳ</w>
          <w lemma="μαρτυρέω">μεμαρτύρηται</w>
          <w lemma="ὑπό">ὑπὸ</w>
          <w lemma="πᾶς">πάντων</w>
          <w lemma="καί">καὶ</w>
          <w lemma="ὑπό">ὑπὸ</w>
          <w lemma="αὐτός">αὐτῆς</w>
          <w lemma="ὁ">τῆς</w>
          <w lemma="ἀλήθεια">ἀληθείας·</w>
          <w lemma="καί">καὶ</w>
          <w lemma="ἐγώ">ἡμεῖς</w>
          <w lemma="δέ">δὲ</w>
          <w lemma="μαρτυρέω">μαρτυροῦμεν,</w>
          <w lemma="καί">καὶ</w>
          <w lemma="οἶδα">⸀οἶδας</w>
          <w lemma="ὅτι">ὅτι</w>
          <w lemma="ὁ">ἡ</w>
          <w lemma="μαρτυρία">μαρτυρία</w>
          <w lemma="ἐγώ">ἡμῶν</w>
          <w lemma="ἀληθής">ἀληθής</w>
          <w lemma="εἰμί">ἐστιν.</w>
        </greek>
      </verse>
      <verse num="13">
        <text><p/><q who="The Elder">I had many things to write to you, but I do not wish to write them with ink and pen.</q></text>
        <greek>
          <w lemma="πολύς">Πολλὰ</w>
          <w lemma="ἔχω">εἶχον</w>
          <w lemma="γράφω">⸂γράψαι</w>
          <w lemma="σύ">σοι⸃,</w>
          <w lemma="ἀλλά">ἀλλ’</w>
          <w lemma="οὐ">οὐ</w>
          <w lemma="θέλω">θέλω</w>
          <w lemma="διά">διὰ</w>
          <w lemma="μέλαν">μέλανος</w>
          <w lemma="καί">καὶ</w>
          <w lemma="κάλαμος">καλάμου</w>
          <w lemma="σύ">σοι</w>
          <w lemma="γράφω">⸀γράφειν·</w>
        </greek>
      </verse>
      <verse num="14">
        <text><q who="The Elder">I hope to see you soon, and we will speak face to face.</q></text>
        <greek>
          <w lemma="ἐλπίζω">ἐλπίζω</w>
          <w lemma="δέ">δὲ</w>
          <w lemma="εὐθέως">εὐθέως</w>
          <w lemma="σύ">⸂σε</w>
          <w lemma="ὁράω">ἰδεῖν⸃,</w>
          <w lemma="καί">καὶ</w>
          <w lemma="στόμα">στόμα</w>
          <w lemma="πρός">πρὸς</w>
          <w lemma="στόμα">στόμα</w>
          <w lemma="λαλέω">λαλήσομεν.</w>
        </greek>
      </verse>
      <verse num="15">
        <text><p/><q who="The Elder">Peace to you. The friends greet you. Greet the friends by name.”</q></text>
        <greek>
          <w lemma="εἰρήνη">Εἰρήνη</w>
          <w lemma="σύ">σοι.</w>
          <w lemma="ἀσπάζομαι">ἀσπάζονταί</w>
          <w lemma="σύ">σε</w>
          <w lemma="ὁ">οἱ</w>
          <w lemma="φίλος">φίλοι.</w>
          <w lemma="ἀσπάζομαι">ἀσπάζου</w>
          <w lemma="ὁ">τοὺς</w>
          <w lemma="φίλος">φίλους</w>
          <w lemma="κατά">κατ’</w>
          <w lemma="ὄνομα">ὄνομα.</w>
        </greek>
      </verse>
