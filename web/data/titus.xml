          <w lemma="αὐτός">αὐτοῦ</w>
          <w lemma="ἐν">ἐν</w>
          <w lemma="κήρυγμα">κηρύγματι</w>
          <w lemma="ὅς">ὃ</w>
          <w lemma="πιστεύω">ἐπιστεύθην</w>
          <w lemma="ἐγώ">ἐγὼ</w>
